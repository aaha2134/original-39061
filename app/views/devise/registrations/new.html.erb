<%# <%= render "shared/second-header"%> 

<%= form_with model:@user, url: user_registration_path, class: 'registration-main', local: true do |f| %>



<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Member Information 
    </h1>
  </div>

   <%=render 'shared/error_messages', model: f.object %> 

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">nickname</label>
      <span class="indispensable">required</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) minsyoku太郎", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Mail address</label>
      <span class="indispensable">required</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password</label>
      <span class="indispensable">required</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※Please include both alphabetic and numeric characters</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">password(confirmation)</label>
      <span class="indispensable">required</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"Please enter the same password." %>
  </div>
  <div class="form-group">
    <p class='form-info-header'>
      identification (of a person)
    </p>
    <p class='form-info-text'>
      For your safety and security, please cooperate in registering your personal information. Your information will not be disclosed to other customers.
    </p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">Your name</label>
      <span class="indispensable">required</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"ex) Yamada" %>
      <%# <label class="form-text"> first name</label>
      <span class="indispensable">必須</span> %>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"ex) Taro" %>
    </div>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <%# <label class="form-text">Middle name</label> %>
      <%# <span class="indispensable">必須</span> %>
    </div>
    <%# <div class='input-name-wrap'>
      <%= f.text_area :last_name_kana, class:"input-name", id:"last-name-kana", placeholder:"例) ヤマダ" %>
      <%# <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) リクタロウ" %> 
    <%# </div>  %>
  </div>
  <div class="form-group">
    <%# <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div> %>
    <%# <div class='input-birth-wrap'> %>
      <%# <%= raw sprintf(
                  f.date_select(
                    :birth_date,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %> 
    <%# </div> %>
    <p class='info-text'>※ Please enter your personal information correctly. It may take some time to correct your information after registration.</p>
  </div>
  <div class="form-group">
    <h2 class='form-bottom-text'>
      By clicking on the "Register" button, you agree to the Terms of Use
      
    </h2>
  </div>
  <div class='register-btn'>
    <%= f.submit "Registration" ,class:"register-red-btn" %>
  </div>
  <p class='register-info'>Registration of your personal information</p>
</div>
<% end %>

<%# <%= render "shared/second-footer"%> 
